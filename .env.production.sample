# Production Environment Configuration
# Copy this file to .env for production deployment
# IMPORTANT: Replace all placeholder values with actual production credentials

# Application Settings
DEBUG=false
SECRET_KEY=your-production-secret-key-change-this-to-a-secure-random-string
CORS_ORIGINS=["https://your-frontend-domain.com"]

# Testing mode (always false in production)
TESTING=false

# Database Configuration (Production PostgreSQL)
DATABASE_URL=postgresql://username:password@your-db-host:5432/urepricer_prod
DB_NAME=urepricer_prod
USER_NAME=your-db-username
PASSWORD=your-secure-db-password
HOST=your-db-host.amazonaws.com
POSTGRES_PORT=5432

# Redis Configuration (Production - ElastiCache or managed Redis)
REDIS_URL=redis://your-redis-cluster.cache.amazonaws.com:6379/0
REDIS_HOST=your-redis-cluster.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-if-auth-enabled

# Celery Configuration
CELERY_BROKER_URL=redis://your-redis-cluster.cache.amazonaws.com:6379/0
CELERY_RESULT_BACKEND=redis://your-redis-cluster.cache.amazonaws.com:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-very-secure-jwt-secret-key-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080  # 7 days

# Amazon SP-API Configuration (Production)
AMAZON_CLIENT_ID=your-production-amazon-client-id
AMAZON_CLIENT_SECRET=your-production-amazon-client-secret
AMAZON_REFRESH_TOKEN=your-production-amazon-refresh-token

# AWS Configuration (Production)
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_REGION=us-east-1
# AWS_ENDPOINT_URL=  # Leave empty for production (use real AWS services)
ROLE_ARN=arn:aws:iam::your-account-id:role/your-production-role

# SQS Configuration (Production AWS SQS URLs)
SQS_QUEUE_URL_ANY_OFFER=https://sqs.us-east-1.amazonaws.com/your-account-id/amazon-any-offer-changed-queue
SQS_QUEUE_URL_FEED_PROCESSING=https://sqs.us-east-1.amazonaws.com/your-account-id/feed-processing-queue

# Notification Destinations (Production)
DESTINATION_ID_US=your-production-destination-us
DESTINATION_ID_UK=your-production-destination-uk
DESTINATION_ID_CA=your-production-destination-ca
DESTINATION_ID_AU=your-production-destination-au

# Slack Notifications (Production)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK

# Business Logic Settings
DEFAULT_MIN_PRICE=1.00
DEFAULT_MAX_PRICE=999.99
FEED_BATCH_SIZE=1000  # Higher batch size for production
MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO  # Less verbose logging in production

# Production Security Settings
# Add any additional production-specific settings here
SSL_VERIFY=true
RATE_LIMIT_ENABLED=true
HEALTH_CHECK_TIMEOUT=30