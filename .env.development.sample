# Development Environment Configuration
# Copy this file to .env for local development

# Application Settings
DEBUG=true
SECRET_KEY=your-development-secret-key-here

# Testing mode (enables fakeredis for tests)
TESTING=false

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/urepricer_dev
DB_NAME=urepricer_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Celery Configuration  
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-for-development
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# Amazon SP-API Configuration
AMAZON_CLIENT_ID=your-dev-amazon-client-id
AMAZON_CLIENT_SECRET=your-dev-amazon-client-secret
AMAZON_REFRESH_TOKEN=your-dev-amazon-refresh-token

# AWS Configuration (LocalStack)
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566
ROLE_ARN=arn:aws:iam::123456789012:role/test-role

# SQS Configuration (LocalStack)
SQS_QUEUE_URL_ANY_OFFER=http://sqs.us-east-1.localhost.localstack.cloud:4566/000000000000/amazon-any-offer-changed-queue
SQS_QUEUE_URL_FEED_PROCESSING=http://sqs.us-east-1.localhost.localstack.cloud:4566/000000000000/feed-processing-queue

# Notification Destinations
DESTINATION_ID_US=dev-destination-us
DESTINATION_ID_UK=dev-destination-uk
DESTINATION_ID_CA=dev-destination-ca
DESTINATION_ID_AU=dev-destination-au

# Business Logic Settings
DEFAULT_MIN_PRICE=1.00
DEFAULT_MAX_PRICE=999.99
FEED_BATCH_SIZE=100
MAX_RETRIES=3

# Logging
LOG_LEVEL=DEBUG

# LocalStack Configuration (for docker-compose)
LOCALSTACK_SERVICES=sqs,sns,s3
LOCALSTACK_DEBUG=1
LOCALSTACK_DATA_DIR=/var/lib/localstack
LOCALSTACK_VOLUME_DIR=/var/lib/localstack

# Docker-specific overrides (used inside containers)
REDIS_HOST_DOCKER=redis
REDIS_URL_DOCKER=redis://redis:6379/0
AWS_ENDPOINT_URL_DOCKER=http://localstack:4566
SQS_QUEUE_URL_ANY_OFFER_DOCKER=http://localstack:4566/000000000000/amazon-any-offer-changed-queue
SQS_QUEUE_URL_FEED_PROCESSING_DOCKER=http://localstack:4566/000000000000/feed-processing-queue