# Development Environment Configuration
# Copy this file to .env for local development

# Application Settings
DEBUG=true
SECRET_KEY=your-development-secret-key-here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Testing mode (enables fakeredis for tests)
TESTING=false

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:abcxyz123@localhost:5432/urepricer_dev
DB_NAME=urepricer_dev
USER_NAME=postgres
PASSWORD=password
HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration (Local Development)
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=  # Leave empty for local Redis without auth

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-for-development
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080  # 7 days

# Amazon SP-API Configuration (Development)
AMAZON_CLIENT_ID=your-dev-amazon-client-id
AMAZON_CLIENT_SECRET=your-dev-amazon-client-secret
AMAZON_REFRESH_TOKEN=your-dev-amazon-refresh-token

# AWS Configuration (LocalStack for Development)
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566  # LocalStack endpoint
ROLE_ARN=arn:aws:iam::123456789012:role/test-role

# SQS Configuration (LocalStack URLs)
SQS_QUEUE_URL_ANY_OFFER=http://localhost:4566/000000000000/amazon-any-offer-changed-queue
SQS_QUEUE_URL_FEED_PROCESSING=http://localhost:4566/000000000000/feed-processing-queue

# Notification Destinations
DESTINATION_ID_US=dev-destination-us
DESTINATION_ID_UK=dev-destination-uk
DESTINATION_ID_CA=dev-destination-ca
DESTINATION_ID_AU=dev-destination-au

# Slack Notifications (Optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Business Logic Settings
DEFAULT_MIN_PRICE=1.00
DEFAULT_MAX_PRICE=999.99
FEED_BATCH_SIZE=100
MAX_RETRIES=3

# Logging
LOG_LEVEL=DEBUG

# Development Features
# These settings are for development/testing only
LOCALSTACK_ENABLED=true
MOCK_AMAZON_API=true
SIMULATE_DELAYS=false